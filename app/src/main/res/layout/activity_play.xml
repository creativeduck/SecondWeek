<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    tools:context=".view.PlayActivity">

    <FrameLayout
        android:id="@+id/frameBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h, 16:9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fitsSystemWindows="true">
        <RelativeLayout
            android:id="@+id/videobox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">
            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/playerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                app:controller_layout_id="@layout/custom_exo_view"
                app:auto_show="true"
                app:resize_mode="fixed_width"
                app:surface_type="surface_view"
                app:use_controller="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:background="@color/black"/>
    </FrameLayout>

    <ScrollView
        android:id="@+id/scrollBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameBox"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/wavvebg">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/detailExplain"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="h, 5:1"
                android:backgroundTint="@color/wavvebg"
                android:clickable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/detail"
                >
                <TextView
                    android:id="@+id/movieTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/linear"
                    android:text="영화 제목"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"/>

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/movieTitle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="평점"
                        android:textColor="@color/explain"
                        android:textSize="17sp"/>
                    <TextView
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="13"
                        android:textColor="@color/explain"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="º"
                        android:textColor="@color/explain"
                        android:textSize="17sp"/>
                    <TextView
                        android:id="@+id/genre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="판타지"
                        android:textColor="@color/explain"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="º"
                        android:textColor="@color/explain"
                        android:textSize="17sp"/>
                    <TextView
                        android:id="@+id/showtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="27"
                        android:textColor="@color/explain"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="분"
                        android:textColor="@color/explain"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="º"
                        android:textColor="@color/explain"
                        android:textSize="17sp"/>
                    <TextView
                        android:id="@+id/audit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="12세"
                        android:textColor="@color/explain"
                        android:textSize="17sp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/explainIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/linear"
                    android:layout_marginEnd="20dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TableLayout
                android:id="@+id/detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="10dp"
                android:stretchColumns="1"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@+id/detailExplain"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="개요"
                        android:textColor="@color/explain"
                        android:textSize="15sp"
                        android:layout_marginEnd="70dp"
                        android:layout_marginBottom="10dp"
                        />
                    <TextView
                        android:id="@+id/countryAndYear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="미국, 2018년"
                        android:textColor="@color/explain"
                        android:textSize="15sp"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="개봉"
                        android:textColor="@color/explain"
                        android:textSize="15sp"
                        android:layout_marginBottom="10dp"
                        />
                    <TextView
                        android:id="@+id/year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2018-03-28"
                        android:textColor="@color/explain"
                        android:textSize="15sp"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="장르"
                        android:textColor="@color/explain"
                        android:textSize="15sp"
                        android:layout_marginBottom="10dp"
                        />
                    <TextView
                        android:id="@+id/detail_genre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="#SF"
                        android:textColor="@color/explain"
                        android:textSize="15sp"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="감독"
                        android:textColor="@color/explain"
                        android:textSize="15sp"
                        android:layout_marginBottom="10dp"
                        />
                    <TextView
                        android:id="@+id/director"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="우리 감독닝"
                        android:textColor="@color/explain"
                        android:textSize="15sp"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="출연"
                        android:textColor="@color/explain"
                        android:textSize="15sp"
                        android:layout_marginBottom="10dp"
                        />
                    <TextView
                        android:id="@+id/actors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="배우"
                        android:textColor="@color/explain"
                        android:textSize="15sp"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="줄거리"
                        android:textColor="@color/explain"
                        android:textSize="15sp"
                        android:layout_marginBottom="10dp"
                        />
                    <TextView
                        android:id="@+id/overview"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="때는 바야흐로"
                        android:textColor="@color/explain"
                        android:layout_marginEnd="20dp"
                        android:textSize="15sp"
                        />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/shareAndHeart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="10dp">
                    <ImageButton
                        android:id="@+id/share"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/share"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/share"
                        android:layout_centerHorizontal="true"
                        android:text="공유"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="13dp">
                    <ImageButton
                        android:id="@+id/image2"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/heart_unselected"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image2"
                        android:layout_centerHorizontal="true"
                        android:text="찜하기"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPlay"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shareAndHeart"
                app:layout_constraintBottom_toTopOf="@+id/tabLayout"
                android:text="시청하기"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:background="@drawable/btnplay_shape"/>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="h, 8:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnPlay"
                app:tabIndicatorColor="@color/wavveblue"
                app:tabSelectedTextColor="@color/white"
                app:tabTextAppearance="@style/tab_text"
                app:tabGravity="center"
                android:backgroundTint="@color/wavvebg">
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추천"/>
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.tabs.TabLayout>

            <com.ssacproject.secondweek.CustomRecommendView
                android:id="@+id/custom1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tabLayout"
                app:layout_constraintBottom_toTopOf="@+id/custom2"
                app:keyword="비슷한 영화"/>

            <com.ssacproject.secondweek.CustomRecommendView
                android:id="@+id/custom2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/custom1"
                app:layout_constraintBottom_toTopOf="@+id/custom3"
                app:keyword="#N차관람영화" />

            <com.ssacproject.secondweek.CustomRecommendView
                android:id="@+id/custom3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/custom2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:keyword="당신의 취향을 반영한 영화"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>